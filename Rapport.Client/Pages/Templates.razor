@using Rapport.Shared.Dto_er.Template
@page "/templates"
<EditForm Model="@TemplateList" OnValidSubmit="OnInitializedAsync">
<div class="container">
    <div class="info-form row col-12">
        <h2 class="text-center"> Skabeloner</h2>
    </div>
    <div class="text.start">
        <div class="container">
            <div class="row align-items-start">
                <table>
                    <thead>
                        <tr>
                            <th class="col-sm-6 col-sm-8  border">Titel</th>                        
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var template in TemplateList)
                        {
                            <tr>
                                <td class="col-sm-6 col-sm-8 border">@(template?.Title ?? "")</td>
                               @* 
                                <td>
                                    <button class="Show-button btn btn-primary" @onclick="(() => ShowTemplate(template.Id))">Vis</button>
                                </td>*@
                            </tr>
                        }
                    </tbody>
                </table>
           
            </div>  
        </div>
  @*
        <div>
            <button class="info-button btn btn-primary" @onclick="(()=> CreateEmptyTemplate())">Opret skabelon</button>
        </div>*@


    </div>
</div>
</EditForm>



  