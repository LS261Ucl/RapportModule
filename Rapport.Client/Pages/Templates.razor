@using Rapport.Shared.Dto_er.Template
@page "/templates"



        <h2 class="text-center"> Skabeloner</h2>
    @if (TemplateList != null)
    {
        <div class="container">
            <div class="info-form flex-column">
            </div>
            <div class="text.start">
                <div class="container">
                    <div class="col-md-12 row">
                        <table>
                            <thead>
                                <tr>
                                    <th class="col-md-4 top-row">Id</th>
                                    <th class="col-md-4 top-row">Titel</th>
                                    <th class="col-md-4 top-row">LayoutId</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var template in TemplateList)
                                {
                                    <tr>
                                        <td>
                                            <div class=" col-md-4 row btn btn-primary " @onclick="(() => ShowTemplate(template?.Id))">@(template?.Id)</div>
                                        </td>
                                        <td class="col-md-4 row ">@(template?.Title ?? "")</td>
                                        <td class="col-md-4 row ">@(template?.LayoutId)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="row justify-content-center">
                    <button class="col-md-2 btn btn-primary" @onclick="(()=> CreateEmptyTemplate())">Opret skabelon</button>
                </div>
            </div>
        </div>

    }






