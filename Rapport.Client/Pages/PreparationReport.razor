@inherits ReportBase
@page "/report/preparation/{id:int}"

<EditForm Model="@reportDto" OnValidSubmit="@OnInitializedAsync">
    <DataAnnotationsValidator/>
    <div class="container">
   <div class="d-lg-grid welcome-text list-unstyled text-black">
       <label>@reportDto?.Title</label>
   </div>
      <div>
            <br /><br />
    </div>
    <div class="form-control edit-input">
        <InputTextArea @bind-Value="@reportDto.Remarks" DisplayName="Bemærkinger til personale!">@reportDto.Remarks</InputTextArea>
    </div>
    <div class="row col-md-12">
        @if(reportDto.ReportGroups != null)
        {
            @foreach(var group in reportDto.ReportGroups)
            {
                    <label>@group.Titel</label>
                    @if(group.Elements != null)
                    {
                    @foreach(var element in group.Elements)
                    {
                        <div >
                            <label>@element.Titel</label>
                            <InputNumber @bind-Value="@element.Numbers">@element.Numbers</InputNumber>
                        </div>
                    }
                }
            }
        }
        <div class="container">
            <div class="row align-content-center">
                <InputTextArea @bind-Value="@reportDto.Remarks" placeholder="Bemærkinger fra Personale"> @reportDto.Remarks</InputTextArea>
            </div>
        </div>
        <div class="md-0">
            <label for="imageUrl">Image Url</label>
            <InputText id="imageUrl" @bind-Value="reportDto.ImageUrl" class="form-control"></InputText>
        </div>
              <div class="mb-0" style="display: flex; flex-wrap: wrap; flex-direction: row; justify-content: center;">
            @if (!string.IsNullOrEmpty(product.ImageUrl))
            {
                <img src="@product.ImageUrl" />
            }
            else
            {
                foreach (var image in product.Images)
                {
                  <img src="@image.img" />
                }
            }
        </div>
        <div class="mb-0">
            <label for="images">Image(s)</label>
            <InputFile id="images" OnChange="OnFileChange" multiple class="form-control"></InputFile>
        </div>   
    </div>
</div>
    <ValidationSummary/>
</EditForm>
