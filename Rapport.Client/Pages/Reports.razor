@page "/reports"



        <div class="container">
            <div class="row justify-content-center">
                <h2 class="col-md-4">Rapporter</h2>
            </div>

            <div class="row">
                <table>
                    <thead>
                        <tr>
                            <th class="col-2 top-row">Id</th>
                            <th class="col-md-4 top-row">Titel</th>
                            <th class="col-md-4 top-row">Dato</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in reportList)
                        {
                            <tr>
                             
                                <td> 
                                    <div class="col-md-4 btn btn-primary" @onclick="(() => HandleValidSubmit(report.Id))"> @(report?.Id)</div>
                                </td>
                                <td class="col-md-4">@(report.Title ?? "")</td>
                                <td class="col-md-4">@(report.Date)</td>
                              
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

